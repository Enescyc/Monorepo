{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "moduleResolution": "node",
    "baseUrl": "..",
    "paths": {
      "@vocabuddy/types": ["../packages/types/src"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules"]
} 